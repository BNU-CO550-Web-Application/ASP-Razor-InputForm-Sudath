@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div style="background-color:lightblue"> 
    <header class="text-center">
        <h1 class="display-4">Welcome To Razor Input Form</h1>
        <h2>by @Model.FullName</h2>
        @*<h2>by Sudath Nawagamuwage</h2>*@
    </header>
    <br /><br />
    <form method="post" class="mx-auto" style="width:200px">
        <p class="col-sm-2">
            <label>Name</label>
            <input type="text" required="true"  placeholder=" Your full name" asp-for="FullName">
        </p>
        <p class="col-sm-2">
            <label>Email</label>
            <input type="email" required="true" placeholder="Your Email" name="email">
        </p>
        <p class="col-sm-2">
            <button type="submit" class="btn btn-success">Register</button>
        </p>
        <p class="col-sm-12">
            @ViewData["Message"]
        </p>
    </form>
</div>
